@model NCKH_HANGOSELL.Models.Customer

@{
    ViewData["Title"] = "Edit Customer";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title">Edit Customer</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Admin/Customer/IndexCustomer">Customer</a></li>
                        <li class="breadcrumb-item active">Edit Customer</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card-body">
                    <form action="/Admin/Customer/UpdateCustomer" method="POST" enctype="multipart/form-data">
                        <input type="hidden" class="form-control" name="id" value="@Model.Id" readonly>
                        <div class="row">
                            <div class="col-12 col-sm-4">
                                <div class="form-group local-forms">
                                    <label>Company <span class="login-danger">*</span></label>
                                    <input type="text" id="companyName" class="form-control" name="CompanyName" value="@Model?.CompanyName" required>
                                    <span asp-validation-for="CompanyName" class="invalid-feedback"></span>
                                </div>
                            </div>
                            <div class="col-12 col-sm-4">
                                <div class="form-group local-forms">
                                    <label>Contact Person <span class="login-danger">*</span></label>
                                    <input type="text" id="contactPerson" class="form-control" name="ContactPerson" value="@Model?.ContactPerson" required />
                                    <span asp-validation-for="ContactPerson" class="invalid-feedback"></span>
                                </div>
                            </div>
                            <div class="col-12 col-sm-4">
                                <div class="form-group local-forms">
                                    <label>E-Mail <span class="login-danger">*</span></label>
                                    <input type="email" id="email" class="form-control" name="Email" value="@Model?.Email" required />
                                    <span asp-validation-for="Email" class="invalid-feedback"></span>
                                </div>
                            </div>
                            <div class="col-12 col-sm-4">
                                <div class="form-group local-forms">
                                    <label>Phone</label>
                                    <input type="text" id="phoneNumber" class="form-control" name="PhoneNumber" value="@Model?.PhoneNumber" required />
                                    <span asp-validation-for="PhoneNumber" class="invalid-feedback"></span>
                                </div>
                            </div>
                            <div class="col-12 col-sm-4">
                                <div class="form-group local-forms">
                                    <label>Address</label>
                                    <input type="text" id="address" class="form-control" name="Address" value="@Model?.Address" required />
                                    <span asp-validation-for="Address" class="invalid-feedback"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="customer-submit">
                                    <button type="submit" class="btn btn-primary">Update</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

