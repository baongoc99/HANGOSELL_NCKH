@model IEnumerable<NCKH_HANGOSELL.Models.User>

@{
    ViewData["Title"] = "List User Grid";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">

                <div class="col">
                    <h3 class="page-title">List User</h3>
                    <div class="col-auto text-end float-end ms-auto download-grp">
                        <a asp-area="Admin" asp-controller="UserRoles" asp-action="IndexUserRoles" class="btn btn-outline-gray me-2 ">
                            <i class="fa fa-list" aria-hidden="true"></i>
                        </a>
                        <a asp-area="Admin" asp-controller="UserRoles" asp-action="GridUserRoles" class="btn btn-outline-gray me-2 active">
                            <i class="fa fa-th" aria-hidden="true"></i>
                        </a>
                        <a asp-area="Admin" asp-controller="UserRoles" asp-action="CreateUserRoles" class="btn btn-outline-gray me-2">
                            <i class="fas fa-plus"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="card bg-comman w-100">
                <div class="card-body">
                    <div class="page-header">
                    </div>
                    <div class="row pb-5 mb-4">
                        @foreach (var user in Model)
                        {
                            <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
                                <!-- Card-->
                                <div class="card shadow-lg border-0 rounded">
                                    <div class="card-body p-0">
                                        <a href="@Url.Action("UserProfile", new { id = user.Id })">
                                            <img class="img-fluid card-img-top" alt="User Info" src="~/@user.Avatar" width="100" height="100" />
                                        </a>
                                        <div class="p-4">
                                            <h5 class="mb-0 text-center"><a href="@Url.Action("UserProfile", new { id = user.Id })">@user.Name</a></h5>
                                            <p class="small text-muted text-center">@user.RoleName</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

